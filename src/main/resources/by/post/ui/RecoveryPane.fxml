<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.post.control.ui.RecoveryPaneController">
   <children>
      <HBox prefHeight="30.0" prefWidth="600.0" />
      <SplitPane dividerPositions="0.5" prefWidth="200.0">
         <items>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" minHeight="22.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="122.0" text="Select database file...">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                        <CheckBox fx:id="filter" mnemonicParsing="false" selected="true" text="Show only &quot;.db&quot; files.">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </CheckBox>
                     </children>
                  </HBox>
                  <TreeView fx:id="databasePath" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label minHeight="22.0" text="Path to save...">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin></Label>
                  <TreeView fx:id="savePath" prefWidth="200.0" />
               </children>
            </VBox>
         </items>
      </SplitPane>
      <HBox alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="35.0">
         <children>
          <Button mnemonicParsing="false" onAction="#onRun" prefHeight="25.0" prefWidth="75.0" text="Run">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
</VBox>
