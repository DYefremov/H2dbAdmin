<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@Ui.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.post.control.ui.TableTabController">
    <children>
        <BorderPane>
            <center>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                    <items>
                        <VBox>
                            <children>
                                <TableView fx:id="columnsTable" tableMenuButtonVisible="true">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="nameColumn" prefWidth="75.0" text="NAME">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="columnName" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="typeColumn" prefWidth="75.0" text="TYPE">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="type" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="keyColumn" editable="false" prefWidth="75.0" text="PIMARY KEY">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="primaryKey" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="incrementColumn" prefWidth="75.0" text="AUTO INCREMENT">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="autoIncrement" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="notNullColumn" prefWidth="75.0" text="NOT NULL">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="notNull" />
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                    <contextMenu>
                                        <ContextMenu>
                                            <items>
                                                <MenuItem mnemonicParsing="false" onAction="#onNewColumnAdd" text="New" />
                                                <MenuItem mnemonicParsing="false" onAction="#onEditColumn" text="Edit" />
                                                <SeparatorMenuItem mnemonicParsing="false" />
                                                <MenuItem mnemonicParsing="false" onAction="#onDeleteColumn" text="Delete" />
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </TableView>
                                <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" styleClass="bar">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onShowData" prefHeight="26.0" prefWidth="26.0" style="-fx-background-image: url(/img/enter.png);">
                                            <tooltip>
                                                <Tooltip text="Show data!" />
                                            </tooltip>
                                            <cursor>
                                                <Cursor fx:constant="HAND" />
                                            </cursor>
                                 <HBox.margin>
                                    <Insets left="2.0" top="2.0" />
                                 </HBox.margin>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <!--Include main table for working with a data (rows) -->
                        <fx:include fx:id="mainTable" source="MainTable.fxml" />
                    </items>
                </SplitPane>
            </center>
            <top>
                <HBox alignment="BOTTOM_LEFT" BorderPane.alignment="BOTTOM_CENTER">
                    <BorderPane.margin>
                        <Insets left="5.0" />
                    </BorderPane.margin>
                    <children>
                        <Label alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" maxHeight="-Infinity" prefHeight="30.0" prefWidth="57.0" text="Columns:">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <VBox alignment="CENTER" HBox.hgrow="SOMETIMES">
                            <children>
                                <Label fx:id="tableNameLabel" text="Table name">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="typeLabel" text="Type">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                            </children>
                            <HBox.margin>
                                <Insets right="50.0" />
                            </HBox.margin>
                        </VBox>
                    </children>
                </HBox>
            </top>
        </BorderPane>
    </children>
</VBox>
