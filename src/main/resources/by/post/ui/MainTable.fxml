<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="BOTTOM_LEFT" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.post.control.ui.MainTableController">
    <children>
        <Label text="Rows:">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
            <VBox.margin>
                <Insets left="5.0" />
            </VBox.margin>
        </Label>
        <TableView fx:id="mainTable" editable="true" onKeyReleased="#onKeyReleased" onMouseClicked="#onMouseClicked" stylesheets="@Ui.css">
            <placeholder>
                <Label text="" />
            </placeholder>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onAddRow" text="%AddNewRow" />
                        <MenuItem mnemonicParsing="false" onAction="#onRemoveRow" text="%DeleteRow" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <HBox fx:id="tableViewToolBar" alignment="BOTTOM_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" styleClass="bar">
            <children>
                <HBox fx:id="toolBarButtonsHBox" alignment="CENTER_LEFT">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onAddRow" prefHeight="26.0" prefWidth="26.0" style="-fx-background-image: url(/img/list-add.png);">
                            <tooltip>
                                <Tooltip text="%AddNewRow" />
                            </tooltip>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" top="2.0" />
                     </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onRemoveRow" prefHeight="26.0" prefWidth="26.0" style="-fx-background-image: url(/img/list-remove.png);">
                            <tooltip>
                                <Tooltip text="%DeleteRow" />
                            </tooltip>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" top="2.0" />
                     </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onSaveRow" prefHeight="26.0" prefWidth="26.0" style="-fx-background-image: url(/img/enter.png);">
                            <tooltip>
                                <Tooltip text="%SaveChanges" />
                            </tooltip>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" top="2.0" />
                     </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <Pane prefHeight="26.0" prefWidth="60.0" HBox.hgrow="SOMETIMES" />
                <HBox fx:id="filterBox" alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="26.0" style="-fx-background-image: url(/img/filter.png);" />
                        <TextField fx:id="filterTextField" onKeyReleased="#onFilter" prefHeight="26.0" prefWidth="150.0" />
                    </children>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </HBox>
                <Pane prefHeight="30.0" prefWidth="165.0" HBox.hgrow="SOMETIMES" />
            </children>
        </HBox>
    </children>
</VBox>
