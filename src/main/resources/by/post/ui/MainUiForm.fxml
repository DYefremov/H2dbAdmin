<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="435.0" prefWidth="650.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.post.control.ui.MainUiController">
   <top>
      <VBox>
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#onItemOpen" text="Open" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#onItemSettings" text="Settings" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#onItemExit" text="Exit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Tools">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#onItemSqlConsole" text="SQL console" />
                        <MenuItem fx:id="itemRecovery" mnemonicParsing="false" onAction="#onItemRecovery" text="Recovery" />
                     </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#onItemAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar prefHeight="25.0" prefWidth="650.0">
               <items>
                  <Button mnemonicParsing="false" onAction="#onBarExplorer" prefHeight="24.0" prefWidth="24.0" style="-fx-background-image: url(/img/manager.png);" stylesheets="@Ui.css" />
                  <Separator orientation="VERTICAL" prefHeight="24.0" prefWidth="5.0" visible="false" />
                  <Button mnemonicParsing="false" onAction="#onBarConsole" prefHeight="24.0" prefWidth="24.0" style="-fx-background-image: url(/img/terminal.png);" stylesheets="@Ui.css" />
                  <Separator layoutX="10.0" layoutY="10.0" orientation="VERTICAL" prefHeight="24.0" prefWidth="5.0" visible="false" />
                  <Button mnemonicParsing="false" onAction="#onBarSettings" prefHeight="24.0" prefWidth="24.0" style="-fx-background-image: url(/img/preferences.png);" stylesheets="@Ui.css" />
                  <Separator layoutX="10.0" layoutY="10.0" orientation="VERTICAL" prefHeight="24.0" prefWidth="5.0" visible="false" />
                  <Button mnemonicParsing="false" onAction="#onBarExit" prefHeight="24.0" prefWidth="24.0" style="-fx-background-image: url(/img/exit.png);" stylesheets="@Ui.css" />
                  <Separator layoutX="114.0" layoutY="10.0" orientation="VERTICAL" prefHeight="24.0" prefWidth="5.0" visible="false" />
               </items>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox>
         <children>
            <TitledPane fx:id="infoPane" expanded="false" text="More info.">
               <content>
                  <TextArea fx:id="console" editable="false" prefWidth="650.0" styleClass="console" stylesheets="@Ui.css" />
               </content>
            </TitledPane>
             <fx:include source="StatusBar.fxml" />
         </children>
      </VBox>
   </bottom>
   <center>
      <SplitPane fx:id="mainSplitPane" dividerPositions="0.3" prefHeight="330.0" style="-fx-background-color: lightgray;" BorderPane.alignment="CENTER">
         <items>
            <TreeView fx:id="tableTree" minWidth="-Infinity" prefHeight="330.0" prefWidth="100.0">
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onTreeContextAdd" text="Add table" />
                        <MenuItem mnemonicParsing="false" onAction="#onTreeContextDelete" text="Delete table" />
                    </items>
                  </ContextMenu>
               </contextMenu></TreeView>
            <BorderPane>
               <center>
                  <TableView fx:id="mainTable" editable="true" minWidth="-Infinity" onKeyReleased="#onKeyReleased" onMouseClicked="#onMouseClicked" prefHeight="330.0" prefWidth="400.0" stylesheets="@Ui.css">
                     <contextMenu>
                        <ContextMenu>
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#onTableItemAdd" text="Add new row" />
                              <MenuItem mnemonicParsing="false" onAction="#onTableItemDelete" text="Delete row" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </TableView>
               </center>
               <bottom>
                  <ToolBar maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" BorderPane.alignment="CENTER">
                    <items>
                        <Button mnemonicParsing="false" onAction="#onAddButton" prefHeight="25.0" prefWidth="25.0" text="+">
                           <tooltip>
                              <Tooltip text="Add row." />
                           </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onRemoveButton" prefHeight="25.0" prefWidth="25.0" text="-" textAlignment="CENTER">
                           <tooltip>
                              <Tooltip text="Delete row." />
                           </tooltip>
                        </Button>
                      <Button mnemonicParsing="false" onAction="#onSaveButton" text="Save" textAlignment="RIGHT">
                           <tooltip>
                              <Tooltip text="Save changes." />
                           </tooltip>
                        </Button>
                    </items>
                  </ToolBar>
               </bottom>
               <top>
                  <Label fx:id="currentTableName" textAlignment="CENTER" BorderPane.alignment="CENTER">
                  </Label>
               </top>
            </BorderPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
