<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="435.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.post.control.ui.MainUiController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onItemOpen" text="Open" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#onItemExit" text="Exit" />
            </items>
          </Menu>
          <Menu fx:id="menuSettings" mnemonicParsing="false" text="Settings" />
            <Menu mnemonicParsing="false" text="Tools">
               <items>
                  <MenuItem fx:id="itemRecovery" mnemonicParsing="false" onAction="#onItemRecovery" text="Recovery" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#onItemAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <TitledPane expanded="false" text="More info." BorderPane.alignment="CENTER">
         <content>
            <TextArea fx:id="console" editable="false" prefHeight="150.0" prefWidth="650.0" />
         </content>
      </TitledPane>
   </bottom>
   <center>
      <SplitPane dividerPositions="0.3" prefHeight="330.0" prefWidth="40.0" BorderPane.alignment="CENTER">
         <items>
            <TreeView fx:id="tableTree" minWidth="-Infinity" prefHeight="330.0" prefWidth="100.0">
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onTreeContextAdd" text="Add" />
                        <MenuItem mnemonicParsing="false" onAction="#onTreeContextDelete" text="Delete" />
                    </items>
                  </ContextMenu>
               </contextMenu></TreeView>
            <BorderPane>
               <center>
                  <TableView fx:id="mainTable" editable="true" minWidth="-Infinity" prefHeight="330.0" prefWidth="400.0" stylesheets="@Ui.css">
                     <contextMenu>
                        <ContextMenu>
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#onTableItemAdd" text="Add" />
                              <MenuItem mnemonicParsing="false" onAction="#onTableItemDelete" text="Delete" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </TableView>
               </center>
               <bottom>
                  <ToolBar maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" BorderPane.alignment="CENTER">
                    <items>
                        <Button mnemonicParsing="false" onAction="#onAddButton" prefHeight="25.0" prefWidth="25.0" text="+">
                           <tooltip>
                              <Tooltip text="Add row." />
                           </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onRemoveButton" prefHeight="25.0" prefWidth="25.0" text="-" textAlignment="CENTER">
                           <tooltip>
                              <Tooltip text="Delete row." />
                           </tooltip>
                        </Button>
                      <Button mnemonicParsing="false" onAction="#onSaveButton" text="Save" textAlignment="RIGHT">
                           <tooltip>
                              <Tooltip text="Save changes." />
                           </tooltip>
                        </Button>
                    </items>
                  </ToolBar>
               </bottom>
               <top>
                  <Label fx:id="currentTableName" textAlignment="CENTER" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </top>
            </BorderPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
